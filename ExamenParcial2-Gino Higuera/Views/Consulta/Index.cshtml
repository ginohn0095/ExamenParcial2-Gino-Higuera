@{
    ViewData["Title"] = "Consultas de Citas Médicas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Diseño de la pagina -->
<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #00bcd4;
        font-weight: 600;
        text-shadow: 0 0 10px rgba(0, 188, 212, 0.5);
    }

    .container {
        background-color: #1e1e1e;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        margin-top: 50px;
        transition: all 0.3s ease;
    }

    .container:hover {
        box-shadow: 0 0 35px rgba(0, 188, 212, 0.3);
    }

    .form-control {
        background-color: #2a2a2a;
        border: 1px solid #333;
        color: #fff;
        border-radius: 10px;
        transition: 0.3s;
    }

    .form-control:focus {
        background-color: #2f2f2f;
        border-color: #00bcd4;
        box-shadow: 0 0 5px #00bcd4;
        color: #fff;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #565e64;
        box-shadow: 0 0 10px rgba(108, 117, 125, 0.5);
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .table-dark thead {
        background-color: #212529;
        color: #00bcd4;
    }

    .table-dark tbody tr:hover {
        background-color: #2a2a2a;
        transition: 0.2s;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    #cuerpoTabla tr {
        transition: background-color 0.2s ease-in-out;
    }

    #cuerpoTabla tr:hover {
        background-color: #333;
    }

    .no-results {
        color: #b0b0b0;
        text-align: center;
        font-style: italic;
    }
</style>

<div class="container">
    <h2 class="text-center mb-4">Consultas de Citas Médicas</h2>

    <!-- Filtros -->
    <div class="row mb-3 align-items-center justify-content-center">
        <div class="col-md-3 mb-2">
            <input type="number" id="pacienteId" class="form-control" placeholder="ID de Paciente">
        </div>
        <div class="col-md-3 mb-2">
            <input type="number" id="doctorId" class="form-control" placeholder="ID de Doctor">
        </div>
        <div class="col-md-6 mb-2 text-center">
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <button id="btnFiltrarPaciente" class="btn btn-primary">Filtrar por Paciente</button>
                <button id="btnFiltrarDoctor" class="btn btn-success">Filtrar por Doctor</button>
                <button id="btnMostrarTodos" class="btn btn-secondary">Mostrar Todos</button>
            </div>
        </div>
    </div>


    <!-- Tabla de resultados -->
    <div class="table-responsive">
        <table class="table table-dark table-hover text-center" id="tablaCitas">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Paciente</th>
                    <th>Doctor</th>
                    <th>Especialidad</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody id="cuerpoTabla">
                <tr><td colspan="5" class="no-results">Cargando datos...</td></tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Script -->
    <script>
        $(document).ready(function () {
            cargarCitas();

            $("#btnFiltrarPaciente").click(function () {
                const pacienteId = $("#pacienteId").val();
                if (pacienteId)
                    filtrar("FiltrarPorPaciente?pacienteId=" + pacienteId);
            });

            $("#btnFiltrarDoctor").click(function () {
                const doctorId = $("#doctorId").val();
                if (doctorId)
                    filtrar("FiltrarPorDoctor?doctorId=" + doctorId);
            });

            $("#btnMostrarTodos").click(function () {
                cargarCitas();
            });

            function cargarCitas() {
                $.getJSON("/Consulta/ObtenerCitas", function (data) {
                    renderTabla(data);
                }).fail(function () {
                    mostrarMensaje("Error al cargar las citas.");
                });
            }

            function filtrar(url) {
                $.getJSON("/Consulta/" + url, function (data) {
                    renderTabla(data);
                }).fail(function () {
                    mostrarMensaje("No se encontraron resultados.");
                });
            }

            function renderTabla(data) {
                const cuerpo = $("#cuerpoTabla");
                cuerpo.empty();

                if (data.length === 0) {
                    mostrarMensaje("No hay resultados disponibles.");
                    return;
                }

                $.each(data, function (i, cita) {
                    cuerpo.append(`
                        <tr>
                            <td>${cita.fecha}</td>
                            <td>${cita.paciente}</td>
                            <td>${cita.doctor}</td>
                            <td>${cita.especialidad}</td>
                            <td>${cita.estado}</td>
                        </tr>
                    `);
                });
            }

            function mostrarMensaje(msg) {
                $("#cuerpoTabla").html(`<tr><td colspan="5" class="no-results">${msg}</td></tr>`);
            }
        });
    </script>
}
